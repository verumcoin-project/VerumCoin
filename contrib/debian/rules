#!/usr/bin/make -f
# -*- mode: makefile; coding: utf-8 -*-

DEB_INSTALL_EXAMPLES_verumcoind += debian/examples/*
DEB_INSTALL_MANPAGES_verumcoind += debian/manpages/*

%:
	dh --with bash-completion $@

override_dh_auto_build:
	cd src; $(MAKE) -f makefile.unix verumcoind USE_ASM=1 USE_LEVELDB=1
	$(MAKE)

override_dh_auto_clean:
	if [ -f Makefile ]; then $(MAKE) clean; else rm -rf build/; rm -f VerumCoin-qt; fi
	cd src; $(MAKE) -f makefile.unix clean

override_dh_auto_configure:
	qmake VerumCoin-qt.pro USE_ASM=1 USE_LEVELDB=1

# Ensure wrapper is set executable
binary-post-install/verumcoind:
	chmod +x $(cdbs_curdestdir)usr/bin/verumcoind
binary-post-install/VerumCoin-qt:
	chmod +x $(cdbs_curdestdir)usr/bin/VerumCoin-qt
